{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=webadminpanel.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Application": {
    "Name": "ASL LivingGrid Web Admin Panel",
    "Version": "1.0.0",
    "Environment": "Development",
    "EnableTrayIcon": true,
    "MinimizeToTray": true,
    "StartMinimized": false
  },
  "Hosting": {
    "Mode": "Standalone",
    "BackupBeforeSwitch": true,
    "AutoMigrate": true
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001"
      }
    }
  },
  "Security": {
    "RequireHttps": false,
    "Cookie": {
      "SecurePolicy": "SameAsRequest",
      "SameSite": "Lax"
    }
  },
  "Features": {
    "EnableMultiLanguage": true,
    "EnableAuditLogs": true,
    "EnableNotifications": true,
    "EnablePlugins": true,
    "DefaultLanguage": "az",
    "SupportedLanguages": ["az", "en", "tr", "ru"]
  },
  "BackupDirectory": "backups"
}
