@page "/smart-update"

<h3>Smart Update Manager</h3>
<p>Simple-data: Demo versiya və update siyahısı.</p>
<table class="table table-striped">
    <thead><tr><th>Version</th><th>Status</th><th>Actions</th></tr></thead>
    <tbody>
        <tr>
            <td>1.0.1</td>
            <td><span class="badge bg-success">Installed</span></td>
            <td><button class="btn btn-sm btn-warning" @onclick="ShowComingSoon">Rollback</button></td>
        </tr>
        <tr>
            <td>1.0.2</td>
            <td><span class="badge bg-info">Available</span></td>
            <td><button class="btn btn-sm btn-primary" @onclick="ShowComingSoon">Update</button></td>
        </tr>
    </tbody>
</table>
@if (!string.IsNullOrEmpty(status))
{
    <div class="alert alert-info">@status</div>
}
@code {
    private string? status;
    private void ShowComingSoon() => status = "Hazırlanır / Çox yaxında!";
}
