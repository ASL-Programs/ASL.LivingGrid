@page "/feature-toggle/visibility"

<div class="page-container">
    <h2>Modular Feature Toggle & Licensing: Per-License/Feature/Tenant Visibility</h2>
    <p>Per-license, per-feature, per-tenant visibility və enablement üçün demo UI və mock data.</p>
    <div class="coming-soon-box">
        <span class="soon-message">Hazırlanır / Çox yaxında!</span>
        <button class="btn btn-primary" @onclick="ShowFeedback">Test Et</button>
    </div>
</div>

@code {
    void ShowFeedback() => ShowToast("Hazırlanır / Çox yaxında!");
    void ShowToast(string msg) {
        Console.WriteLine(msg);
    }
}
