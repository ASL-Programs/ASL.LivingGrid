@page "/ai-model-lifecycle"

<h3>AI Model Lifecycle Management</h3>
<p>Simple-data: Demo AI model və version siyahısı.</p>
<table class="table table-striped">
    <thead><tr><th>Model</th><th>Version</th><th>Status</th><th></th></tr></thead>
    <tbody>
        <tr><td>GPT-4</td><td>v1.2</td><td><span class="badge bg-success">Active</span></td><td><button class="btn btn-sm btn-secondary" @onclick="ShowComingSoon">Rollback</button></td></tr>
        <tr><td>Gemini</td><td>v1.0</td><td><span class="badge bg-warning">Testing</span></td><td><button class="btn btn-sm btn-primary" @onclick="ShowComingSoon">Promote</button></td></tr>
    </tbody>
</table>
<button class="btn btn-success mt-3" @onclick="ShowComingSoon">Yeni Model</button>
@if (!string.IsNullOrEmpty(status))
{
    <div class="alert alert-info">@status</div>
}
@code {
    private string? status;
    private void ShowComingSoon() => status = "Hazırlanır / Çox yaxında!";
}
