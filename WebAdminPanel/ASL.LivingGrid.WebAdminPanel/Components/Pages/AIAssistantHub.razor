        <tr><td>OpenAI GPT-4</td><td>OpenAI</td><td><span class="badge bg-success">Active</span></td><td>1200</td><td><button class="btn btn-sm btn-secondary" @onclick="ShowComingSoon">Audit</button></td></tr>
