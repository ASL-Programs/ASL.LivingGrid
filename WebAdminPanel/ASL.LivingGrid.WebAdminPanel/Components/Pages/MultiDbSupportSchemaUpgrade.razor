@page "/multi-db-support/schema-upgrade"

<PageTitle>Multi-DB: Schema Upgrade</PageTitle>
<div class="page-container">
    <h2>Çoxlu Veritabanı: Automated Schema Upgrade, Diff, Rollback</h2>
    <p>Automated DB schema upgrade, diff və rollback üçün demo UI və mock data.</p>
    <div class="coming-soon-box">
        <span class="soon-message">Hazırlanır / Çox yaxında!</span>
        <button class="btn btn-primary" @onclick="ShowFeedback">Test Et</button>
    </div>
</div>

@code {
    void ShowFeedback() => ShowToast("Hazırlanır / Çox yaxında!");
    void ShowToast(string msg) {
        Console.WriteLine(msg);
    }
}
