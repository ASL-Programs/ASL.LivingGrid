@page "/granular-permissions"

<h3>Granular Dynamic Permission System</h3>
<p>Simple-data: Demo permission group və policy preview.</p>
<table class="table table-striped">
    <thead><tr><th>Permission</th><th>Group</th><th>Type</th><th>Status</th><th></th></tr></thead>
    <tbody>
        <tr><td>Edit User</td><td>Admin</td><td>UI</td><td><span class="badge bg-success">Active</span></td><td><button class="btn btn-sm btn-primary" @onclick="ShowComingSoon">Edit</button></td></tr>
        <tr><td>Export Data</td><td>Reporting</td><td>API</td><td><span class="badge bg-warning">Inactive</span></td><td><button class="btn btn-sm btn-secondary" @onclick="ShowComingSoon">Enable</button></td></tr>
    </tbody>
</table>
<button class="btn btn-success mt-3" @onclick="ShowComingSoon">Yeni Permission</button>
@if (!string.IsNullOrEmpty(status))
{
    <div class="alert alert-info">@status</div>
}
@code {
    private string? status;
    private void ShowComingSoon() => status = "Hazırlanır / Çox yaxında!";
}
