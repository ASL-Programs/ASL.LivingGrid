@page "/device-analytics"

<h3>Realtime Device Analytics</h3>
<p>Simple-data: Demo cihaz və istifadəçi analytics preview.</p>
<table class="table table-striped">
    <thead><tr><th>Device</th><th>Usage</th><th>Location</th></tr></thead>
    <tbody>
        <tr><td>PC-01</td><td>120h</td><td>Baku</td></tr>
        <tr><td>Tablet-02</td><td>30h</td><td>Ganja</td></tr>
    </tbody>
</table>
<button class="btn btn-info mt-3" @onclick="ShowComingSoon">Show Map</button>
@if (!string.IsNullOrEmpty(status))
{
    <div class="alert alert-info">@status</div>
}
@code {
    private string? status;
    private void ShowComingSoon() => status = "Hazırlanır / Çox yaxında!";
}
